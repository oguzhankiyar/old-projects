@model bgk_gorev_uye
@{
    ViewBag.Title = "Görevi Teslim Et";               
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div class="table">
    <div class="title">Görevi Teslim Et</div>
    <div class="content">
        <div class="form">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <ul>
                    <li>@Html.LabelFor(model => model.GorevID)</li>
                    <li>@Model.bgk_gorev.Adi</li>
                </ul>
                <ul>
                    <li>@Html.LabelFor(model => model.Rapor)</li>
                    <li>@Html.TextAreaFor(model => model.Rapor)</li>
                </ul>
                <ul>
                    <li>@Html.LabelFor(model => model.DosyaID)</li>
                    <li>@Html.EditorFor(model => model.DosyaID)</li>
                </ul>
                @Html.HiddenFor(model => model.Id)
                @Html.MyEditor("Rapor", "Standard")
            }
        </div>
    </div>
</div>
<div class="buttons">
    @Html.Button("Gönder", new { type = "submit" })
    @Html.Button("Vazgeç", new { onclick = "window.location.href='" + Url.Action("details", new { id = Model.bgk_gorev.Id }) + "';" })
</div>