@model bgk_gorev

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div class="title">@Model.Adi</div>
<div class="content">
    Açıklama: @Model.Aciklama<br />
    Puan: @Model.Puan<br />
    Başlangıç Tarihi: @DateTime.Now<br />
    Bitiş Tarihi: @Model.GunSayisi gün (@DateTime.Now.AddDays((int)Model.GunSayisi))
    <h2>Görevi almak istediğinizden emin misiniz?</h2>
    <h5>Görevi zamanında teslim etmezseniz ceza alırsınız!</h5>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id)
        @Html.Hidden("BaslangicTarihi", DateTime.Now)
        @Html.Hidden("BitisTarihi", DateTime.Now.AddDays((int)Model.GunSayisi))
    }
</div>