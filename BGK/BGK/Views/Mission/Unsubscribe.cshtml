@model bgk_gorev_kategori_uye

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div class="title">@Model.bgk_gorev_kategori.Adi Aboneliği Kaldır</div>
<div class="content">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <h3>Bu kategori aboneliğini kaldırmak istediğinizden emin misiniz?</h3>
        <h4>Kaldırdığınızda aldığınız bütün görevler ve bu görevlerden aldığınız puanlar geri alınacaktır!</h4>
        @Html.HiddenFor(model => model.KategoriID)
        @Html.HiddenFor(model => model.UyeID)
        @Html.HiddenFor(model => model.Id)
    }
</div>