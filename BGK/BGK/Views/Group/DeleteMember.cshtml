@model bgk_grup_uye

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div class="title">Grup Üye Sil</div>
<div class="content">
    <div class="details">
        <h3>Aşağıdaki üyeyinin grup üyeliğini silmek istediğinizden emin misiniz?</h3>
        <ul>
            <li>@Html.DisplayNameFor(model => model.UyeID)</li>
            <li>@Model.bgk_uye.AdSoyad</li>
        </ul>
        <ul>
            <li>@Html.DisplayNameFor(model => model.GrupID)</li>
            <li>@Model.bgk_grup.Adi</li>
        </ul>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id)
    }
</div>