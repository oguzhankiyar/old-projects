@model bgk_grup_uye
@{
    ViewBag.Title = "Üye Düzenle";
    List<SelectListItem> tips = new List<SelectListItem>();
    tips.Add(new SelectListItem { Text = "Normal Üye", Value = "3" });
    tips.Add(new SelectListItem { Text = "Başkan Yardımcısı", Value = "2" });
    tips.Add(new SelectListItem { Text = "Başkan", Value = "1" });
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div class="table">
    <div class="title">Üye Düzenle</div>
    <div class="content">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="form">
                <ul>
                    <li>@Html.LabelFor(model => model.GrupID)</li>
                    <li>@Model.bgk_grup.Adi</li>
                </ul>
                <ul>
                    <li>@Html.LabelFor(model => model.UyeID)</li>
                    <li>@Model.bgk_uye.AdSoyad</li>
                </ul>
                <ul>
                    <li>@Html.LabelFor(model => model.Aciklama)</li>
                    <li>@Html.EditorFor(model => model.Aciklama)</li>
                    <li>@Html.ValidationMessageFor(model => model.Aciklama)</li>
                </ul>
                <ul>
                    <li>@Html.LabelFor(model => model.Tip)</li>
                    <li>@Html.DropDownListFor(model => model.Tip, tips)</li>
                    <li>@Html.ValidationMessageFor(model => model.Tip)</li>
                </ul>
                <ul>
                    <li>@Html.LabelFor(model => model.BaslangicTarihi)</li>
                    <li>@Html.EditorFor(model => model.BaslangicTarihi)</li>
                    <li>@Html.ValidationMessageFor(model => model.BaslangicTarihi)</li>
                </ul>
                <ul>
                    <li>@Html.LabelFor(model => model.BitisTarihi)</li>
                    <li>@Html.EditorFor(model => model.BitisTarihi)</li>
                    <li>@Html.ValidationMessageFor(model => model.BitisTarihi)</li>
                </ul>
                <ul>
                    <li>@Html.LabelFor(model => model.Aktif)</li>
                    <li>@Html.EditorFor(model => model.Aktif)</li>
                    <li>@Html.ValidationMessageFor(model => model.Aktif)</li>
                </ul>
                <ul>
                    <li>
                        @Html.Button("Kaydet", new { type = "submit" })
                        @Html.Button("Vazgeç", new { onclick = "window.location.href='" + Url.Action("memberdetails", new { id = Model.Id }) + "';" })
                    </li>
                </ul>
                @Html.HiddenFor(model => model.Id)
            </div>
        }
    </div>
</div>
