@model bgk_yorum

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div class="table">
    <div class="content">
        <div class="sections">
            <a href="@Url.Action("index", "category")" style="width: 33%;">Kategoriler</a>
            <a href="@Url.Action("index", "post")" style="width: 33%;">Yazılar</a>
            <a class="active" href="@Url.Action("index", "comment")" style="width: 33.8%;">Yorumlar</a>
        </div>
    </div>
</div>
<div class="table">
    <div class="title">Yorum Düzenle</div>
    <div class="content">
        <div class="form">
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)
                @Html.AntiForgeryToken()
                <ul>
                    <li>@Html.LabelFor(model => model.Yorum)</li>
                    <li>@Html.TextAreaFor(model => model.Yorum)</li>
                    <li>@Html.ValidationMessageFor(model => model.Yorum)</li>
                </ul>
                <ul>
                    <li>@Html.LabelFor(model => model.YaziID)</li>
                    <li>@Model.bgk_yazi.Baslik</li>
                </ul>
                <ul>
                    <li>@Html.LabelFor(model => model.Onay)</li>
                    <li>@Html.EditorFor(model => model.Onay)</li>
                    <li>@Html.ValidationMessageFor(model => model.Onay)</li>
                </ul>
                <ul>
                    <li>Kaydet</li>
                    <li>
                        @Html.Button("Kaydet", new { type = "submit" })
                        @Html.Button("Vazgeç", new { onclick = "window.location.href='" + Url.Action("index") + "';" })
                    </li>
                </ul>
                @Html.MyEditor("Yorum", "Full")
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.YaziID)
                @Html.HiddenFor(model => model.UyeID)
                @Html.HiddenFor(model => model.Yazan)
                @Html.HiddenFor(model => model.YazilmaTarihi)
            }
        </div>
    </div>
</div>