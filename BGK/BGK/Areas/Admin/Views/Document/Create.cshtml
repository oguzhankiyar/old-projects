@model bgk_dokuman

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div class="table">
    <div class="content">
        <div class="sections">
            <a href="@Url.Action("index", "documentcategory")" style="width: 50%;">Kategoriler</a>
            <a class="active" href="@Url.Action("index", "document")" style="width: 49.9%;">Dökümanlar</a>
        </div>
    </div>
</div>

<div class="table">
    <div class="title">Döküman Ekle</div>
    <div class="content">
        <div class="form">
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)
                @Html.AntiForgeryToken()
                <ul>
                    <li>@Html.LabelFor(model => model.Adi)</li>
                    <li>@Html.EditorFor(model => model.Adi)</li>
                    <li>@Html.ValidationMessageFor(model => model.Adi)</li>
                </ul>
                <ul>
                    <li>@Html.LabelFor(model => model.Icerik)</li>
                    <li>@Html.TextAreaFor(model => model.Icerik)</li>
                    <li>@Html.ValidationMessageFor(model => model.Icerik)</li>
                </ul>
                <ul>
                    <li>@Html.LabelFor(model => model.KategoriID)</li>
                    <li>@Html.DropDownList("KategoriID", String.Empty)</li>
                    <li>@Html.ValidationMessageFor(model => model.KategoriID)</li>
                </ul>
                <ul>
                    <li>@Html.LabelFor(model => model.DosyaID)</li>
                    <li>@Html.EditorFor(model => model.DosyaID)
                        @Html.Button("Dosya Seç/Yükle", new { onclick = "$.BGK.FormModal('" + Url.Action("Upload", "Upload", new { type = "all", columnID = "DosyaID" }) + "', 'Yükle', 'Vazgeç');" })
                    </li>
                    <li>@Html.ValidationMessageFor(model => model.DosyaID)</li>
                </ul>
                <ul>
                    <li>@Html.LabelFor(model => model.Sira)</li>
                    <li>@Html.EditorFor(model => model.Sira)</li>
                    <li>@Html.ValidationMessageFor(model => model.Sira)</li>
                </ul>
                <ul>
                    <li>@Html.LabelFor(model => model.Onay)</li>
                    <li>@Html.EditorFor(model => model.Onay)</li>
                    <li>@Html.ValidationMessageFor(model => model.Onay)</li>
                </ul>
                <ul>
                    <li>Kaydet</li>
                    <li>
                        @Html.Button("Kaydet", new { type = "submit" })
                        @Html.Button("Vazgeç", new { onclick = "window.location.href='" + Url.Action("index") + "';" })
                    </li>
                </ul>
                @Html.MyEditor("Icerik", "Full")
            }
        </div>
    </div>
</div>