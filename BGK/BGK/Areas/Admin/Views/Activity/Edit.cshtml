@model bgk_etkinlik

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div class="table">
    <div class="content">
        <div class="sections">
            <a class="active" href="@Url.Action("index", "activity")" style="width: 50%;">Etkinlikler</a>
            <a href="@Url.Action("index", "factory")" style="width: 49%;">Firmalar</a>
        </div>
    </div>
</div>
<div class="table">
    <div class="title">Etkinlik Ekle</div>
    <div class="content">
        <div class="form">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <ul>
                    <li>@Html.LabelFor(model => model.Adi)</li>
                    <li>@Html.EditorFor(model => model.Adi)</li>
                    <li>@Html.ValidationMessageFor(model => model.Adi)</li>
                </ul>
                <ul>
                    <li>@Html.LabelFor(model => model.Aciklama)</li>
                    <li>@Html.TextAreaFor(model => model.Aciklama)</li>
                    <li>@Html.ValidationMessageFor(model => model.Aciklama)</li>
                </ul>
                <ul>
                    <li>@Html.LabelFor(model => model.FirmaID)</li>
                    <li>@Html.DropDownList("FirmaID", String.Empty)</li>
                    <li>@Html.ValidationMessageFor(model => model.FirmaID)</li>
                </ul>
                <ul>
                    <li>@Html.LabelFor(model => model.AfisID) <a href="javascript:void(0);" onclick="$.BGK.FormModal('@Url.Action("Upload", "Upload", new { type = "image" })', 'Yükle', 'Vazgeç');">Resim Yükleyin</a></li>
                    <li>@Html.EditorFor(model => model.AfisID)</li>
                    <li>@Html.ValidationMessageFor(model => model.AfisID)</li>
                </ul>
                <ul>
                    <li>@Html.LabelFor(model => model.BaslangicTarihi)</li>
                    <li>@Html.EditorFor(model => model.BaslangicTarihi)</li>
                    <li>@Html.ValidationMessageFor(model => model.BaslangicTarihi)</li>
                </ul>
                <ul>
                    <li>@Html.LabelFor(model => model.BitisTarihi)</li>
                    <li>@Html.EditorFor(model => model.BitisTarihi)</li>
                    <li>@Html.ValidationMessageFor(model => model.BitisTarihi)</li>
                </ul>
                <ul>
                    <li>Kaydet</li>
                    <li>
                        @Html.Button("Kaydet", new { type = "submit" })
                        @Html.Button("Vazgeç", new { onclick = "window.location.href='" + Url.Action("index") + "';" })
                    </li>
                </ul>
                @Html.MyEditor("Aciklama", "Full")
                @Html.HiddenFor(model => model.Id)
            }
        </div>
    </div>
</div>