@model bgk_dosya
@{
    string columnID = ViewBag.columnID;
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Uploads.js")" type="text/javascript"></script>

<script type="text/javascript">
    $("input[type='submit']").click(function () {
        $("#file").upload("@Url.Action("Upload")?id=@columnID&des=" + $("#Aciklama").val(), function (msg) {
            eval(msg);
        });
    });
</script>

<div class="title">Dosya Yükle</div>
<div class="content">
    <div class="form">
        <ul>
            <li>@Html.Label("Dosya Seçin")</li>
            <li><input id="file" type="file" name="file" /></li>
        </ul>
        <ul>
            <li>@Html.LabelFor(model => model.Aciklama)</li>
            <li>@Html.EditorFor(model => model.Aciklama)</li>
            <li>@Html.ValidationMessageFor(model => model.Aciklama)</li>
        </ul>
    </div>
</div>