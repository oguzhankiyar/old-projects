@model club_member

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<script type="text/javascript">
    function Login() {
        $.post($("div.login form").attr("action"), $("div.login form").serialize(), function (msg) {
            $("div.login .info").html(msg);
        });
    }
</script>

<div class="table">
    <div class="title">Üye Girişi</div>
    <div class="content">
        <div style="color: red;"><b>Uyarı: </b><br />Sadece kulüp üyeleri giriş yapabilir..<br />Kulüp üyesi olupta hesabınız yoksa bizimle iletişime geçin..</div>
        <div class="login">
            @using (Html.BeginForm("Login", "Member", FormMethod.Post))
            {
                <div class="form">
                    <ul>
                        <li>@Html.LabelFor(model => model.Email)</li>
                        <li>@Html.EditorFor(model => model.Email)</li>
                    </ul>
                    <ul>
                        <li>@Html.LabelFor(model => model.Password)</li>
                        <li>@Html.EditorFor(model => model.Password)</li>
                    </ul>
                    <ul>
                        <li class="info" style="width: auto;"></li>
                        <li style="width: auto; float: right;">@Html.Button("Giriş", new { onclick = "Login()" })</li>
                    </ul>
                </div>
            }
        </div>
    </div>
</div>