@model comment
@{
    ViewBag.Title = "Cevap Ekle";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    <div class="form">
        <ul>
            <li>@Html.LabelFor(model => model.Content)</li>
            <li>@Html.TextAreaFor(model => model.Content)<small>@Html.ValidationMessageFor(model => model.Content)</small></li>
        </ul>
        <ul>
            <li>@Html.LabelFor(model => model.TopicId, "topic")</li>
            <li>@Html.DropDownList("TopicId", String.Empty)<small>@Html.ValidationMessageFor(model => model.TopicId)</small></li>
        </ul>
        <ul>
            <li>@Html.LabelFor(model => model.IsApproval)</li>
            <li>@Html.EditorFor(model => model.IsApproval)<small>@Html.ValidationMessageFor(model => model.IsApproval)</small></li>
        </ul>
        <ul>
            <li>Kaydet</li>
            <li>
                @Html.Button("Kaydet", new { type = "submit" })
                @Html.Button("Vazgeç", new { onclick = "OpenNewPage('" + Url.Action("index") + "');" })
            </li>
        </ul>
        @Html.MyEditor("Content", "Standard")
    </div>
}