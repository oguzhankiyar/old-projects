@model user
@{
    ViewBag.Title = "Üye Düzenle";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    <div class="form">
        <ul>
            <li>@Html.LabelFor(model => model.UserName)</li>
            <li>@Html.EditorFor(model => model.UserName)<small>@Html.ValidationMessageFor(model => model.UserName)</small></li>
        </ul>
        <ul>
            <li>@Html.LabelFor(model => model.Name)</li>
            <li>@Html.EditorFor(model => model.Name)<small>@Html.ValidationMessageFor(model => model.Name)</small></li>
        </ul>
        <ul>
            <li>@Html.LabelFor(model => model.Email)</li>
            <li>@Html.EditorFor(model => model.Email)<small>@Html.ValidationMessageFor(model => model.Email)</small></li>
        </ul>
        <ul>
            <li>@Html.LabelFor(model => model.ImageFile)</li>
            <li>@Html.EditorFor(model => model.ImageFile)<small>@Html.ValidationMessageFor(model => model.ImageFile)</small></li>
        </ul>
        <ul>
            <li>@Html.LabelFor(model => model.Seo)</li>
            <li>@Html.EditorFor(model => model.Seo)<small>@Html.ValidationMessageFor(model => model.Seo)</small></li>
        </ul>
        <ul>
            <li>@Html.LabelFor(model => model.Rating)</li>
            <li>@Html.EditorFor(model => model.Rating)<small>@Html.ValidationMessageFor(model => model.Rating)</small></li>
        </ul>
        <ul>
            <li>@Html.LabelFor(model => model.TypeId, "type")</li>
            <li>@Html.DropDownList("TypeId", String.Empty)<small>@Html.ValidationMessageFor(model => model.TypeId)</small></li>
        </ul>
        <ul>
            <li>@Html.LabelFor(model => model.DisplayType)</li>
            <li>@Html.EditorFor(model => model.DisplayType)<small>@Html.ValidationMessageFor(model => model.DisplayType)</small></li>
        </ul>
        <ul>
            <li>@Html.LabelFor(model => model.IsBanned)</li>
            <li>@Html.EditorFor(model => model.IsBanned)<small>@Html.ValidationMessageFor(model => model.IsBanned)</small></li>
        </ul>
        <ul>
            <li>@Html.LabelFor(model => model.IsApproval)</li>
            <li>@Html.EditorFor(model => model.IsApproval)<small>@Html.ValidationMessageFor(model => model.IsApproval)</small></li>
        </ul>
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.Password)
        @Html.HiddenFor(model => model.RegistrationDate)
        @Html.HiddenFor(model => model.LastLoginDate)
        @Html.HiddenFor(model => model.LoginCount)
        @Html.HiddenFor(model => model.ConfirmationCode)
        <ul>
            <li>Kaydet</li>
            <li>
                @Html.Button("Kaydet", new { type = "submit" })
                @Html.Button("Vazgeç", new { onclick = "OpenNewPage('" + Url.Action("index") + "');" })
            </li>
        </ul>
    </div>
}