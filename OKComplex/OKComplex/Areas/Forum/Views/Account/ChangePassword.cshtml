@model ChangePasswordModel

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div class="title">Şifremi Değiştir</div>
<div class="content">
    @using (Html.BeginForm("ChangePasswordSave", "Account", FormMethod.Post))
    {
        <div class="form">
            <ul>
                <li><b>@Html.LabelFor(model => model.OldPassword)</b>@Html.DescriptionFor(model => model.OldPassword)</li>
                <li>@Html.EditorFor(model => model.OldPassword)</li>
            </ul>
            <ul>
                <li><b>@Html.LabelFor(model => model.NewPassword)</b>@Html.DescriptionFor(model => model.NewPassword)</li>
                <li>@Html.EditorFor(model => model.NewPassword)</li>
            </ul>
            <ul>
                <li><b>@Html.LabelFor(model => model.ConfirmNewPassword)</b>@Html.DescriptionFor(model => model.ConfirmNewPassword)</li>
                <li>@Html.EditorFor(model => model.ConfirmNewPassword)</li>
            </ul>
            @Html.HiddenFor(model => model.Id)
        </div>
    }
</div>