@model topic

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div class="title">Yeni Konu</div>
<div class="content" style="width: 700px;">
    @using (Html.BeginForm("CreateTopicSave", "Forum", FormMethod.Post))
    {    
        <div class="form">
            <ul>
                <li><b>@Html.LabelFor(model => model.Title)</b>@Html.DescriptionFor(model => model.Title)</li>
                <li>@Html.EditorFor(model => model.Title)</li>
            </ul>
            <ul>
                <li><b>@Html.LabelFor(model => model.Content)</b>@Html.DescriptionFor(model => model.Content)</li>
                <li>@Html.TextAreaFor(model => model.Content)</li>
            </ul>
            @Html.MyEditor("Content", "Standard")
            @Html.HiddenFor(model => model.ForumId)
            @Html.HiddenFor(model => model.WriterId)
        </div>
    }
</div>