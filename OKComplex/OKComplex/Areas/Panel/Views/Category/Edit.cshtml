@model club_category
@{
    ViewBag.Title = "Kategori Düzenle";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    <div class="form">
        <ul>
            <li>@Html.LabelFor(model => model.Name)</li>
            <li>@Html.EditorFor(model => model.Name)<small>@Html.ValidationMessageFor(model => model.Name)</small></li>
        </ul>
        <ul>
            <li>@Html.LabelFor(model => model.Sort)</li>
            <li>@Html.EditorFor(model => model.Sort)</li>
        </ul>
        <ul>
            <li>@Html.LabelFor(model => model.IsApproval)</li>
            <li>@Html.EditorFor(model => model.IsApproval)</li>
        </ul>
        <ul>
            <li>Kaydet</li>
            <li>
                @Html.Button("Kaydet", new { type = "submit" })
                @Html.Button("Vazgeç", new { onclick = "OpenNewPage('" + Url.Action("index") + "');" })
            </li>
        </ul>
        @Html.HiddenFor(model => model.Id)
    </div>
}