@model club_postcomment
@{
    ViewBag.Title = "Yorum Düzenle";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    <div class="form">
        <ul>
            <li>@Html.LabelFor(model => model.Comment)</li>
            <li>@Html.TextAreaFor(model => model.Comment)<small>@Html.ValidationMessageFor(model => model.Comment)</small></li>
        </ul>
        <ul>
            <li>@Html.LabelFor(model => model.PostId, "post")</li>
            <li>@Html.DropDownList("PostId", String.Empty)<small>@Html.ValidationMessageFor(model => model.PostId)</small></li>
        </ul>
        <ul>
            <li>@Html.LabelFor(model => model.IsApproval)</li>
            <li>@Html.EditorFor(model => model.IsApproval)<small>@Html.ValidationMessageFor(model => model.IsApproval)</small></li>
        </ul>
        @Html.MyEditor("Content", "Standard")
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.MemberId)
        @Html.HiddenFor(model => model.WriterName)
        @Html.HiddenFor(model => model.WritingDate)
        <ul>
            <li>Kaydet</li>
            <li>
                @Html.Button("Kaydet", new { type = "submit" })
                @Html.Button("Vazgeç", new { onclick = "OpenNewPage('" + Url.Action("index") + "');" })
            </li>
        </ul>
    </div>
}