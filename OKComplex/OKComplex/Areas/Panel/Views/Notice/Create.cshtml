@model club_notice
@{
    ViewBag.Title = "Duyuru Ekle";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    <div class="form">
        <ul>
            <li>@Html.LabelFor(model => model.Title)</li>
            <li>@Html.EditorFor(model => model.Title)<small>@Html.ValidationMessageFor(model => model.Title)</small></li>
        </ul>
        <ul>
            <li>@Html.LabelFor(model => model.Content)</li>
            <li>@Html.TextAreaFor(model => model.Content)<small>@Html.ValidationMessageFor(model => model.Content)</small></li>
        </ul>
        <ul>
            <li>@Html.LabelFor(model => model.Image)</li>
            <li>@Html.EditorFor(model => model.Image)<small>@Html.ValidationMessageFor(model => model.Image)</small></li>
        </ul>
        <ul>
            <li>@Html.LabelFor(model => model.Sort)</li>
            <li>@Html.EditorFor(model => model.Sort)<small>@Html.ValidationMessageFor(model => model.Sort)</small></li>
        </ul>
        <ul>
            <li>@Html.LabelFor(model => model.IsApproval)</li>
            <li>@Html.EditorFor(model => model.IsApproval)<small>@Html.ValidationMessageFor(model => model.IsApproval)</small></li>
        </ul>
        <ul>
            <li>Kaydet</li>
            <li>
                @Html.Button("Kaydet", new { type = "submit" })
                @Html.Button("Vazgeç", new { onclick = "OpenNewPage('" + Url.Action("index") + "');" })
            </li>
        </ul>
        @Html.MyEditor("Content", "Standard")
    </div>
}