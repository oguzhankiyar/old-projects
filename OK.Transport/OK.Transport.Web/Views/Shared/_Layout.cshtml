@{
    Layout = null;
}
<html>
<head>
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
    <script src="//code.jquery.com/jquery-1.10.2.js"></script>
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    <script type="text/javascript">
        $(function () {
            $("#back").click(function () {
                window.history.back();
            });
            $(".menu div").removeClass("active");
            $("#" + "@ViewBag.ActiveLink").addClass("active");
        });
    </script>
    <style type="text/css">
        @@font-face {
            font-family: Ubuntu Light;
            src: url(/fonts/Ubuntu-L.ttf);
            font-weight: bold;
        }

        body {
            background: url('/Content/bg.jpg') fixed;
            margin: 0;
            padding: 0;
            font-family: 'Ubuntu Light';
            font-weight: 100;
            color: #fff;
            overflow-x: hidden;
            line-height: 30px;
        }

        ::-webkit-input-placeholder {
            color: rgba(255, 255, 255, .5);
        }

        :-moz-placeholder { /* Firefox 18- */
            color: rgba(255, 255, 255, .5);
        }

        ::-moz-placeholder { /* Firefox 19+ */
            color: rgba(255, 255, 255, .5);
        }

        :-ms-input-placeholder {
            color: rgba(255, 255, 255, .5);
        }

        a, a:link, a:visited, a:active {
            color: #c5c5c5;
            text-decoration: none;
        }

            a:link {
                color: #c5c5c5;
            }

            a:hover {
                color: #fff;
            }

        input[type='text'] {
            background-color: rgba(255, 255, 255, .25);
            font-size: 17px;
            padding: 10px 15px;
            margin: 5px;
            outline: none;
            border: none;
            border-bottom: 2px solid #c5c5c5;
            color: #fff;
            width: 350px;
        }

            input[type='text']:focus {
                border-bottom: 2px solid #fff;
            }

        button, input[type='submit'] {
            background-color: rgba(139, 0, 0, .9);
            font-size: 17px;
            padding: 10px 15px;
            margin: 5px;
            border: none;
            border-bottom: 2px solid #c5c5c5;
            color: #fff;
            width: auto;
            outline: none;
            cursor: pointer;
        }

            button:hover, input[type='submit']:hover {
                background-color: rgba(255, 69, 0, .5);
            }

            button:active, button:target, input[type='submit']:active, input[type='submit']:target {
                background-color: rgba(255, 69, 0, .9);
                border-bottom: 2px solid #fff;
            }

        div {
            display: table;
        }

        .page {
            background: rgba(0, 0, 0, .50);
            width: 100%;
            height: 100%;
            z-index: 1000;
        }

        .header-bar {
            position: fixed;
            display: table;
            background-color: #FFFFFF;
            width: 100%;
            padding: 0 15%;
            border-bottom: 3px solid rgba(139, 0, 0, .9);
            z-index: 1200;
        }

            .header-bar div {
                float: left;
            }

            .header-bar .logo {
                width: 35%;
            }

        .logo span {
            padding: 5px;
            font-size: 22.5px;
            color: darkred;
            font-weight: bold;
            display: inline-table;
            padding: 5px 0;
        }

        .menu div {
            display: inline-table;
            list-style: none;
            padding: 5px 10px;
            margin: 0;
            text-align: center;
            height: 30px;
            color: darkred;
        }

            .menu div:hover {
                background-color: #f5f5f5;
                cursor: pointer;
            }

            .menu div.active {
                background-color: rgba(139, 0, 0, .9);
                color: #fff;
                cursor: default;
            }

        .container {
            display: table;
            width: 80%;
            height: 100%;
            padding: 100px 0 50px 15%;
        }

        .transporter {
            display: table;
            margin: 10px 5px 0 5px;
            padding: 35px 10px;
            background-color: rgba(54, 54, 54, .75);
            font-size: 25px;
            font-weight: 100;
            width: 675px;
        }

            .transporter img {
                vertical-align: middle;
            }

        .seat {
            display: inline-table;
            width: 45px;
            height: 25px;
            margin: 2.5px;
            padding: 5px 0 0 0;
            text-align: center;
        }

        .seat-1 {
            background-color: rgba(255, 255, 255, .5);
        }

        .seat-5 {
            background-color: rgba(31, 80, 239, .5);
        }

        .seat-6 {
            background-color: rgba(0, 0, 0, .5);
            width: 10px;
        }

        .seat-7 {
            background-color: rgba(255, 69, 0, .5);
            width: 10px;
        }

        .seat-8 {
            background-color: rgba(255, 69, 0, .5);
        }

        .seat-9 {
            background-color: rgba(255, 0, 0, .5);
        }
    </style>
    <meta charset="utf-8" />
</head>
<body>
    <div class="page">
        <div class="header-bar">
            <div class="logo">
                <span id="back" style="padding-right: 20px; cursor: pointer;">&larr;</span><span onclick="window.location.href='/'" style="cursor: pointer;">servis.im</span>
            </div>
            <div class="menu">
                <a href="@Url.Action("Search", "Default")">
                    <div id="linkSearch">
                        <span>Sefer Ara</span>
                    </div>
                </a>
                <a href="@Url.Action("PopularJourneys", "Default")">
                    <div id="linkPopularJourneys">
                        <span>Popüler Seferler</span>
                    </div>
                </a>
                <a href="@Url.Action("ReservationSearch", "Default")">
                    <div id="linkReservationSearch">
                        <span>İşlem Ara</span>
                    </div>
                </a>
                <a href="@Url.Action("Campaigns", "Default")">
                    <div id="linkCampaigns">
                        <span>Kampanyalar</span>
                    </div>
                </a>
            </div>
        </div>
        <div class="container">
            @RenderBody()
        </div>
    </div>
</body>
</html>