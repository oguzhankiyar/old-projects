
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Chars</title>
    <style type="text/css">
        input[type='text'] {
            width: 100%;
            font-size: x-large;
            border: none;
            background-color: #f5f5f5;
            outline: none;
            padding: 10px;
            margin: 2.5px;
            font-family: Consolas;
            height: 75px;
            text-align: center;
        }
        span {
            display: table;
            width: 100%;
            background-color: #f9f9f9;
            font-family: Consolas;
            font-size: x-large;
            text-align: center;
            padding: 35px 10px;
            margin: 2.5px;
            height: 35px;
        }
    </style>
    <script type="text/javascript" src="http://code.jquery.com/jquery-1.11.3.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $("#txtChar").keypress(function (e) {
                $("#txtChar").val(e.char);
                var code = e.charCode;
                $("#charCode").text("&#" + code + ";");
            });
        });
    </script>
</head>
<body>
    <div style="margin: 15% auto; width: 250px;">
        <input id="txtChar" type="text" placeholder="Type a char" maxlength="1" /><br />
        <span id="charCode"></span>
    </div>
</body>
</html>
