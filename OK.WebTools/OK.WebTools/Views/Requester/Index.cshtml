@model OK.WebTools.Controllers.RequestForm
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Requester</title>
    <script type="text/javascript" src="http://code.jquery.com/jquery-1.11.3.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $("#request").click(function () {
                $("form").submit();
            });
        });
    </script>
    <style type="text/css">
        body {
            font-size: medium;
            font-family: Consolas;
            overflow-y: scroll;
        }

        #request {
            display: table;
            font-size: 30px;
            font-family: 'Times New Roman';
            cursor: pointer;
            margin: 0 0 0 25px;
        }

        input[type='text'] {
            width: 100%;
            font-size: medium;
            border: none;
            background-color: #f5f5f5;
            outline: none;
            padding: 10px;
            margin: 2.5px;
            font-family: Consolas;
        }
    </style>
</head>
<body>
    <div>
        @using (Html.BeginForm())
        {
            <div style="float:left;width:90%;">
                <input id="Url" name="Url" type="text" value="@(Model == null ? "" : Model.Url)" placeholder="Url String" />
            </div>
            <div style="float:left;width:5%;">
                <span id="request">↵</span>
            </div>
        }
        <div style="margin: 10px;">@(Model == null ? "" : Model.Result)</div>
    </div>
</body>
</html>
