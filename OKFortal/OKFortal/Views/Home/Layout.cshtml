<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="content-type" content="text/html; charset=iso-8859-9">
        <meta name="keywords" content="@(ViewBag.keywords == "" ? OK.Config("site-keywords") : OK.Config("site-keywords") + ", " + ViewBag.keywords)">
        <meta name="abstract" content="@OK.Config("site-description")">
        <meta name="classification" content="@OK.Config("site-category")">
        <meta name="robots" content="all">
        <title>@(ViewBag.Title == "" ? OK.Config("site-name") : ViewBag.Title + " - " + OK.Config("site-name"))</title>
        @Scripts.Render("~/bundles/modernizr")
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/OK")
        @Scripts.Render("~/CKEditor")
        <link href="@Url.Content("~/Themes/" + OK.Config("site-theme") + "/Images/favicon.ico")" rel="icon" />
        <link href="@Url.Content("~/Themes/" + OK.Config("site-theme") + "/StyleSheet.css")" rel="stylesheet" />
        <script src="@Url.Content("~/syntaxhighlighter/scripts/shCore.js")" type="text/javascript"></script>
	    <script src="@Url.Content("~/syntaxhighlighter/scripts/sh.js")" type="text/javascript"></script>
    </head>
    <body>
        <img id="loading" alt="Loading" src="@Url.Content("~/Themes/" + OK.Config("site-theme") + "/Images/loading.gif")" />
        <img id="top" src="@Url.Content("~/Themes/" + OK.Config("site-theme") + "/Images/up_circular.png")" />
        @if (OK.Config("site-on/off") == "0" && Session["role"].ToString() == "10")
        {
            <div style="position: fixed; display: table; width: 100%; height: 30px; line-height: 30px; background-color: rgba(0, 0, 0, 0.7); color: #fff; text-align: center;">
                Sitemiz þuan bakýmda ve sadece yöneticilere görüntülenmekte..
            </div>
            <div style="display: table; height: 30px;"></div>
        }
        <div class="page">
            <div class="top">
                <div class="logo"></div>
                @{
                    Html.RenderAction("Membership", "Home");
                    Html.RenderAction("Menu", "Home");
                }
            </div>
            <div class="main">
                @RenderSection("Map", required: false)
                @{Html.RenderAction("Notices", "Home");}
                @RenderBody()
            </div>
            <div class="bottom">
                <div class="copyright">@Html.Raw(OK.Config("copyright"))</div>
            </div>
        </div>
    </body>
</html>