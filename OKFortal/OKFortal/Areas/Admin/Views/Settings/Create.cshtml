@model config
@{
    ViewBag.Title = "Ayar Ekle";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    <div class="form">
        <ul>
            <li>@Html.LabelFor(model => model.Key)</li>
            <li>@Html.EditorFor(model => model.Key)<small>@Html.ValidationMessageFor(model => model.Key)</small></li>
        </ul>
        <ul>
            <li>@Html.LabelFor(model => model.Value)</li>
            <li>@Html.TextAreaFor(model => model.Value)<small>@Html.ValidationMessageFor(model => model.Value)</small></li>
        </ul>
        <ul>
            <li>@Html.LabelFor(model => model.Description)</li>
            <li>@Html.EditorFor(model => model.Description)<small>@Html.ValidationMessageFor(model => model.Description)</small></li>
        </ul>
        <ul>
            <li>Kaydet</li>
            <li>
                @Html.Button("Kaydet", new { type = "submit" })
                @Html.Button("Vazgeç", new { onclick = "OpenNewPage('" + Url.Action("index") + "');" })
            </li>
        </ul>
        @Html.MyEditor("Value", "Standard")
    </div>
}