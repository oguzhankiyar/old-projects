@model menulink
@{
    ViewBag.Title = "Link Ekle";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    <div class="form">
        <ul>
            <li>@Html.LabelFor(model => model.Name)</li>
            <li>@Html.EditorFor(model => model.Name)<small>@Html.ValidationMessageFor(model => model.Name)</small></li>
        </ul>
        <ul>
            <li>@Html.LabelFor(model => model.OnClick)</li>
            <li>@Html.EditorFor(model => model.OnClick)<small>@Html.ValidationMessageFor(model => model.OnClick)</small></li>
        </ul>
        <ul>
            <li>@Html.LabelFor(model => model.Sort)</li>
            <li>@Html.EditorFor(model => model.Sort)<small>@Html.ValidationMessageFor(model => model.Sort)</small></li>
        </ul>
        <ul>
            <li>@Html.LabelFor(model => model.IsApproval)</li>
            <li>@Html.EditorFor(model => model.IsApproval)<small>@Html.ValidationMessageFor(model => model.IsApproval)</small></li>
        </ul>
        <ul>
            <li>Kaydet</li>
            <li>
                @Html.Button("Kaydet", new { type = "submit" })
                @Html.Button("Vazgeç", new { onclick = "OpenNewPage('" + Url.Action("index") + "');" })
            </li>
        </ul>
    </div>
}